{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-server",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\s\\((\\d+):(\\d+)\\)\\s(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*VITE.*ready.*",
          "endsPattern": ".*ready in.*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/client"
      }
    },
    {
      "label": "build-framework",
      "type": "shell",
      "command": "pnpm --filter @creative-force/electron build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "dependsOn": "build-framework"
    }
  ]
}

