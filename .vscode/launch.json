{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "${workspaceFolder}/resources/dist/Electron.app/Contents/MacOS/Electron",
      "args": [
        ".",
        "--remote-debugging-port=9223"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "ELECTRON_IS_DEV": "1",
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/client/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/client/src/renderer",
      "urlFilter": "http://localhost:5173/**",
      "timeout": 30000,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Debug All (Main + Renderer)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "${workspaceFolder}/client/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/client/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--remote-debugging-port=9223",
        "--inspect=9229"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "ELECTRON_IS_DEV": "1",
        "NODE_ENV": "development",
        "ELECTRON_RENDERER_URL": "http://localhost:5173"
      },
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/client/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Preload Script",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "${workspaceFolder}/client/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/client/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--remote-debugging-port=9223",
        "--inspect-brk=9230"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "ELECTRON_IS_DEV": "1",
        "NODE_ENV": "development"
      },
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Main & Renderer",
      "configurations": [
        "Debug Main Process",
        "Debug Renderer Process"
      ],
      "stopAll": true,
      "preLaunchTask": "dev-server"
    }
  ]
}
